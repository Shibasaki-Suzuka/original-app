<% if user_signed_in? %>
  <div class="main">
    <div class="main-space">

      <div class="main-user">
        <div class="main-user-btn">
          <%= link_to "#{ current_user.nickname}の夢" , user_path(current_user), class: "user-nickname"%>
        </div>
        <div class="btn">
          <%= link_to "夢ができた" , new_dream_path, class: "new-btn"%>
        </div>
      </div>

      <%# ----夢リスト---- %>
      <div class="dream-list">
        <div class="dream-list-main">
          <table class="dream-table">
            <thead class="dream_content">
              <tr class="dream__contents">
                <th class="item">No.</th>
                <th class="dream-item">あなたの夢</th>
                <th class="item">cost</th>
                <th class="item">期限</th>
                <th class="memo-item">調べたこと</th>
              </tr>
            </thead>
            <tbody class="dream-tbody">
              <% @dreams.each do |dream| %>
                <tr class="dream-text">
                  <td><%= link_to dream.id, new_dream_path(dream.id), class: :card__title %></td>
                  <td><%= dream.dream_list %></td>
                  <td><%= dream.cost %></td>
                  <td><%= dream.due %></td>
                  <td><%= dream.memo %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    
    <%# ---friend list---- %>
    <div class="main-light">
      <div class="friends">
        <div class="friend-list">
          friend list
        </div>
        <ul class="friend-list-main">
          <li>いしくら</li>
          <li>えんどう</li>
          <li>おぜ</li>
          <li>わたなべ</li>
          <li>こうだ</li>
          <li>あべ</li>
        </ul>
      </div>
    </div>
  </div>
<% else %>
<% end %>
