<%# ---ログイン画面--- %>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
<div class='session-form-wrap'>
  <div class='form-header'>
    ユーザー情報入力
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-blue-btn" %>
  </div>
</div>
<% end %>

