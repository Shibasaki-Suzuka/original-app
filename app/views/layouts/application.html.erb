<%# CSS・・・assets/stylesheets/style.css %>
<!DOCTYPE html>
<html>
  <head>
    <title>OriginalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="header">
    <div class="dreamnote-logo">
      <%= link_to image_tag("dreamnote-logo.png", class:"dreamnote-icon"), "/" %>
    </div>
    <div class="navbar">
    <% if user_signed_in? %>
      <div class="header-menues">
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "header-menu" %>
      </div>
    <% else %>
      <div class="navbar">
        <%= link_to "ログイン", new_user_session_path, class: "header-menu" %>
        <%= link_to "新規登録", new_user_registration_path, class: "header-menu" %>
      </div>
    <% end %>
    </div>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
